<%- include('header'); -%>

    <div class="container mt-4">

        <div class="my-4">
            <% if(message) { %>
                <div class="alert alert-<%= message.type %>" role="alert">
                    <%= message.message %>
                </div>

                <% } %>
        </div>
        <h3 class="text-center my-3">All Orders</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Mango Juice</th>
                    <th scope="col">Berry Juice</th>
                    <th scope="col">Apple Juice</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                <!--   mangoJuices: 2.99,
  berryJuices: 1.99,
  appleJuices: 2.49, -->

                <% allOrders.forEach(function(order, i) { %>
                    <tr>
                        <th scope="row">
                            <%=i+1 %>
                        </th>
                        <td>
                            <%=order.name %>
                        </td>
                        <td>
                            <%=order.phone %>
                        </td>
                        <td>
                            <%=order.address %>
                        </td>
                        <td>
                            <%=order.mangoJuices?? 0 %>
                        </td>
                        <td>
                            <%=order.berryJuices ?? 0 %>
                        </td>
                        <td>
                            <%=order.appleJuices ?? 0 %>
                        </td>
                        <td onclick="myFunction(order._id)">
                            <a style="text-decoration: none; color: red;" href="/delete/<%=order._id %>">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <%- include('footer'); -%>